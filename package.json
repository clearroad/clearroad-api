{
  "name": "@clearroad/api",
  "version": "2.2.0",
  "description": "",
  "main": "dist/commonjs/index.js",
  "module": "dist/module/index.js",
  "typings": "dist/module/index.d.ts",
  "scripts": {
    "build": "rimraf dist && npm run build:libs && rollup -c && npm run build:modules",
    "build:libs": "mkdir -p dist/node/lib && cp -R node/lib/*.js dist/node/lib/",
    "build:modules": "tsc -p tsconfig.commonjs.json && tsc -p tsconfig.build.json",
    "build:definitions": "node build-definitions.js; npm run lint:fix",
    "lint": "tslint \"src/**/*.ts\"",
    "lint:fix": "tslint --fix \"src/**/*.ts\"",
    "deploy": "node deploy.js",
    "test": "rimraf coverage && karma start karma.conf.ts",
    "test:watch": "karma start karma.conf.ts --no-single-run",
    "start": "http-server -o --cors",
    "release": "standard-version",
    "postrelease": "git push origin master --follow-tags",
    "commitmsg": "commitlint -e $GIT_PARAMS"
  },
  "keywords": [
    "clearroad",
    "api",
    "node"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/clearroad/clearroad-api.git"
  },
  "author": "Guillaume Royer <guillaume.royer@clearroad.io>",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "ajv": "^6.5.4",
    "jsonschema": "^1.2.4",
    "moment": "^2.21.0",
    "rsvp": "git+https://lab.nexedi.com/nexedi/rsvp.js.git",
    "rusha": "0.8.2",
    "urijs": "^1.19.1",
    "uritemplate": "git+https://lab.nexedi.com/nexedi/uritemplate-js.git",
    "xhr2": "git+https://github.com/clearroad/node-xhr2.git"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "@types/jasmine": "~2.8.6",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "azure-storage": "^2.10.0",
    "dotenv": "^6.0.0",
    "http-server": "^0.11.1",
    "husky": "^0.14.3",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "^3.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.0",
    "karma-jasmine": "~1.1.1",
    "karma-jasmine-html-reporter": "^0.2.2",
    "karma-typescript": "^3.0.13",
    "karma-typescript-es6-transform": "^1.0.4",
    "lodash.clonedeep": "^4.5.0",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.5",
    "rimraf": "^2.6.2",
    "rollup": "^0.64.1",
    "rollup-plugin-buble": "^0.19.2",
    "rollup-plugin-commonjs": "^9.1.5",
    "rollup-plugin-hypothetical": "^2.1.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-typescript": "^0.8.1",
    "rollup-plugin-uglify": "^4.0.0",
    "standard-version": "^4.4.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1"
  }
}
